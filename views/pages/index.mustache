<section class="w-full py-4 md:py-6 lg:py-8 xl:py-10 bg-gradient-to-b from-white to-gray-100">
    <div class="container px-4 md:px-6 mx-auto">
        <div class="grid gap-6 lg:grid-cols-[1fr_400px] lg:gap-12 xl:grid-cols-[1fr_600px]">
        <!-- Left: Text -->
        <div class="flex flex-col justify-center space-y-4">
            <div class="space-y-2">
            <span class="inline-flex bg-green-600 text-white px-3 py-1 text-sm font-semibold rounded shadow-lg shadow-green-500/20">
                New Courses Available
            </span>
            <h1 class="text-3xl font-bold tracking-tighter sm:text-5xl xl:text-6xl text-green-600 ">
                Discover Your Rhythm with Expert Dance Courses
            </h1>
            <p class="max-w-[600px] text-green-900 md:text-xl">
                Learn from world-class organisations and master various dance styles from the comfort of your home.
            </p>
            </div>

            <!-- Buttons -->
            <div class="flex flex-col gap-2 sm:flex-row">
            <a href="/#courses" class="inline-flex items-center justify-center gap-2 px-6 py-3 text-white bg-green-600 hover:bg-green-700 rounded text-lg shadow-xl shadow-green-500/20">
                Explore Courses →
            </a>
            <a href="/signup" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 rounded text-lg hover:bg-gray-100">
                Free Trial
            </a>
            </div>

            <!-- Stars and trust message -->
            <div class="flex items-center gap-4 text-sm mt-2">
            <div class="flex items-center gap-1 text-yellow-400">
                <span>⭐</span><span>⭐</span><span>⭐</span><span>⭐</span><span>⭐</span>
            </div>
            <div class="text-gray-500">
                Trusted by 10,000+ students worldwide
            </div>
            </div>
        </div>

        <!-- Right: Image -->
        <div>
            <img
            src="https://images.unsplash.com/photo-1504609813442-a8924e83f76e?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Dance Course Hero"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover sm:w-full lg:aspect-square w-[550px] h-[550px]"
            />
        </div>
        </div>
    </div>
</section>

<section id="courses" class="w-full py-12 md:py-24 lg:py-32 bg-white">
  <div class="container px-4 md:px-6 mx-auto text-center">
    <span class="inline-block border border-green-600 text-green-600 px-3 py-1 rounded text-sm font-medium mb-2">
      Featured Courses
    </span>
    <h2 class="text-3xl font-bold tracking-tight md:text-4xl mb-6">
      Explore Our Popular Dance Courses
    </h2>

    <ul id="course-list" class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    {{#courses}}
        {{> course-item }}
    {{/courses}}
    </ul>
  </div>
</section>

