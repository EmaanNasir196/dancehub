<div class="flex items-center justify-center min-h-screen bg-gray-50">
  <div class="w-full max-w-md bg-white p-8 ">
    <h2 class="text-2xl font-bold mb-6 text-center text-green-600">Welcome Back</h2>
    <form method="POST" action="/login" class="space-y-5">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" required
          class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" required
          class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500">
      </div>
      <div class="flex items-center justify-between">
        <a href="/signup" class="text-sm text-green-600 hover:underline">Don't have an account?</a>
      </div>
      <button type="submit"
        class="w-full py-2 px-4 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-md shadow-lg transition">
        Login
      </button>
    </form>
  </div>
</div>
