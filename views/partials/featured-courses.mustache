<section id="courses" class="w-full py-12 md:py-24 lg:py-32 bg-white">
  <div class="container px-4 md:px-6 mx-auto">
    <div class="flex flex-col items-center justify-center space-y-4 text-center">
      <div class="space-y-2">
        <span class="inline-block border border-blue-600 text-blue-600 px-3 py-1 rounded text-sm font-medium">
          Featured Courses
        </span>
        <h2 class="text-3xl font-bold tracking-tight md:text-4xl">
          Explore Our Popular Dance Courses
        </h2>
        <p class="mx-auto max-w-[700px] text-gray-600 md:text-xl">
          From beginners to advanced dancers, we have courses for everyone.
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 pt-12 md:grid-cols-2 lg:grid-cols-3">
      <!-- Course Card -->
      {{#courses}}
      <a href="/courses/{{slug}}" class="block h-full overflow-hidden transition-all hover:shadow-lg border rounded-lg bg-white">
        <div class="aspect-video w-full overflow-hidden">
          <img src="{{image}}" alt="{{title}}" class="h-full w-full object-cover transition-all hover:scale-105" />
        </div>
        <div class="p-6">
          <span class="inline-block bg-gray-200 text-gray-700 text-xs font-semibold px-2 py-1 rounded">{{level}}</span>
          <h3 class="mt-4 text-xl font-bold">{{title}}</h3>
          <div class="mt-2 flex items-center text-gray-500 text-sm">
            <span class="mr-1">⏱</span> {{duration}} weeks
            <span class="ml-4 mr-1">👥</span> {{students}} students
          </div>
          <p class="mt-2 text-gray-600 text-sm">
            {{description}}
          </p>
          <div class="mt-4 flex items-center justify-between">
            <div class="font-bold">${{price}}</div>
            <a href="/courses/{{slug}}" class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700">
              View Details
            </a>
          </div>
        </div>
      </a>
      {{/courses}}
    </div>

    <div class="mt-12 flex justify-center">
      <a href="/courses" class="px-6 py-3 border border-gray-300 text-gray-800 rounded hover:bg-gray-100 text-lg">
        View All Courses
      </a>
    </div>
  </div>
</section>
